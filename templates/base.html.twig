        <link rel="stylesheet" href="{{ asset('css/frontend.css') }}">
        <link rel="stylesheet" href="{{ asset('css/forum.css') }}">
        {% block stylesheets %}{% endblock %}

    </head>
    <body>
        <!-- Header -->
<header>
    <div class="container header-content">
        <a href="{{ path('app_home') }}" class="logo">Autist Connect</a>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('app_home') }}" class="{{ app.request.attributes.get('_route') == 'app_home' ? 'active' : '' }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('app_informations') }}" class="{{ app.request.attributes.get('_route') == 'app_informations' ? 'active' : '' }}">Comprendre</a>
                </li>
                <li>
                    <a href="{{ path('app_testimony') }}" class="{{ app.request.attributes.get('_route') == 'app_testimony' ? 'active' : '' }}">Témoignages</a>
                </li>
                <li>
                    <a href="{{ path('app_resources') }}" class="{{ app.request.attributes.get('_route') == 'app_resources' ? 'active' : '' }}">Ressources</a>
                </li>
                <li>
                    <a href="{{ path('app_contact') }}" class="{{ app.request.attributes.get('_route') == 'app_contact' ? 'active' : '' }}">Contact</a>
                </li>
                <li>
                    <a href="{{ path('app_senso') }}" class="{{ app.request.attributes.get('_route') == 'app_senso' ? 'active' : '' }}">Senso</a>
                </li>
                <li>
                    <a href="{{ path('app_blog') }}" class="{{ app.request.attributes.get('_route') == 'app_blog' ? 'active' : '' }}">Blog</a>
                </li>
                                <li>
                    <a href="{{ path('app_forum') }}" class="{{ app.request.attributes.get('_route') == 'app_forum' ? 'active' : '' }}">Forum</a>
                </li>
                <li>
                    <a href="{{ path('app_register') }}" class="{{ app.request.attributes.get('_route') == 'app_register' ? 'active' : '' }}">Inscription</a>
                </li>
            </ul>
        </nav>
        <button class="search-btn">Rechercher</button>
    </div>
</header>

    {# read and display several types of flash messages #}
    {% for label, messages in app.flashes(['success', 'warning']) %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

        {% block body %}{% endblock %}
  <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>Comprendre l'Autisme</h3>
                    <p>Un espace de ressources et de soutien pour les parents d'enfants autistes.</p>
                </div>
                <div class="footer-column">
                    <h3>Liens rapides</h3>
                    <ul>
                        <li><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li><a href="{{ path('app_about') }}">À propos</a></li>
                        <li><a href="{{ path('app_resources') }}">Ressources</a></li>
                        <li><a href="{{ path('app_testimony') }}">Témoignages</a></li>
                        <li><a href="{{ path('app_resources') }}">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Ressources</h3>
                    <ul>
                        <li><a href="#">Guides pratiques</a></li>
                        <li><a href="#">Vidéos</a></li>
                        <li><a href="#">Webinaires</a></li>
                        <li><a href="#">Forum</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Suivez-nous</h3>
                    <div class="social-links">
                        <a href="#">FB</a>
                        <a href="#">TW</a>
                        <a href="#">IG</a>
                        <a href="#">YT</a>
                    </div>
                    <div style="margin-top: 20px;">
                        <p>Inscrivez-vous à notre newsletter</p>
                        <div style="display: flex; margin-top: 10px;">
                            <input type="email" class="form-control" placeholder="Votre email" style="border-radius: 5px 0 0 5px;">
                            <button style="background-color: white; border: none; padding: 10px 15px; border-radius: 0 5px 5px 0; cursor: pointer;">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Comprendre l'Autisme. Tous droits réservés.</p>
            </div>
        </div>
    </footer>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
        <script src="{{ asset('js/contact.js') }}"></script>
        <script src="{{ asset('js/senso.js') }}"></script>
        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </body>
</html>
